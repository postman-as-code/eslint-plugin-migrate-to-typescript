{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@uniqorg/eslint-plugin": ["packages/eslint-plugin/src/index.ts"],
      "m2ts": ["packages/m2ts/src/index.ts"],
      "eslint-plugin-migrate-to-typescript": ["packages/m2ts/src/index.ts"],
      "node-lib": ["packages/node-lib/src/index.ts"],
      "node-lib2": ["packages/node-lib2/src/index.ts"],
      "package-to-publish": ["packages/package-to-publish/src/index.ts"],
      "ts-package": ["packages/ts-package/src/index.ts"],
      "website": ["apps/website/src/pages/index.tsx"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
