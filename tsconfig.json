{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "composite": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "website/**", 
        "website/node_modules",
        "**/node_modules/**", 
        "node_modules",
        "**/node_modules",
        "**/node_modules/*",
        "**/node_modules/**/*.ts",
        "**/node_modules/**/*.tsx",
        "**/build/**",
        "**/*coverage/**"
    ]
}