{
  "extends": ["../../.eslintrc.js"],
  "ignorePatterns": [
    "!**/*",
    "tests/fixtures/indent/*.js"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": [
          "packages/eslint-plugin-migrate-to-typescript/tsconfig.*?.json"
        ]
      },
      "env": {
        "node": true,
        "jest": true
      },
      "rules": {
        "@typescript-eslint/await-thenable": "error",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
              "argsIgnorePattern": "^_",
              // add extra pattern like "_ignore"
              "destructuredArrayIgnorePattern": "^_",
              "caughtErrors": "none"
          }
        ]
      }
    }
  ]
}
