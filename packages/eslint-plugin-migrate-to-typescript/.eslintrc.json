{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": [
          "packages/eslint-plugin-migrate-to-typescript/tsconfig.*?.json"
        ]
      },
      "rules": {
        "@typescript-eslint/await-thenable": "error"
      }
    }
  ]
}
